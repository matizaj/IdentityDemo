@model AppUser


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserName">Nazwa</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">haslo</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsNewUser">Pierwsze logowanie</label>
        <select asp-for="IsNewUser" class="form-control">
            <option type="checkbox" value="true">Tak</option>
            <option type="checkbox" value="false">Nie</option>
        </select>
        
    </div>
    <button type="submit">Utworz</button>
    <a asp-action="Index">Anuluj</a>
</form>

